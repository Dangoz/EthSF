generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

model Guide {
  id        String     @id @default(cuid())
  name      String
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  ipas      GuideIPA[]
}

model IPA {
  ipAssetId   String     @id
  title       String
  description String
  license     String?
  ipfsUrl     String?
  guides      GuideIPA[]
}

model GuideIPA {
  guide   Guide  @relation(fields: [guideId], references: [id])
  guideId String
  ipa     IPA    @relation(fields: [ipaId], references: [ipAssetId])
  ipaId   String

  @@id([guideId, ipaId])
}
